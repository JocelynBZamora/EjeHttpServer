<UserControl x:Class="ServidorPostit.Views.PostIT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServidorPostit.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Black" Background="Beige" Padding="5" Width="200" Height="127" RenderTransformOrigin="0.5,0" >
        <Border.RenderTransform>
            <RotateTransform Angle="10"></RotateTransform>
        </Border.RenderTransform>
        <StackPanel>
            <TextBlock Text="Titulo" TextAlignment="Center" FontWeight="Bold" FontSize="12" Height="20"></TextBlock>
            <TextBlock Text="Esto es el contenido del postit" TextAlignment="Justify" Height="80" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"></TextBlock>
            <TextBlock Text="Remitente" TextAlignment="Right" FontSize="10" Height="15"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
